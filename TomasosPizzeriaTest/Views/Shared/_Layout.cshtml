@using Microsoft.AspNetCore.Identity
@using TomasosPizzeriaTest.IdentityData
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tomasos</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/"
          crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/jquery.ajax.unobtrusive/3.2.4/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/site.js" defer></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-light bg-light sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="StartPage"><img class="img-fluid" src=~/images/Tomatologomindre.png id="logo" /></a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarRes">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbarRes" class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="StartPage">Hem</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Meny">Meny</a></li>
                    <partial name="_NavbarPartial"/>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 text-center">
                    <h3>Kontakt</h3>
                    <hr />
                    <a>08-270 34 34</a>
                    <p>Tallkrogsvägen 87, 122 39 Enskede</p>
                    <p>Info@Tomasos.se</p>
                </div>
                <div class="col-lg-4 text-center">
                    <img id="footerlogo" src="~/images/Tomatologomindre.png" />
                </div>
                <div class="col-lg-4 text-center">
                    <h3>Öppettider</h3>
                    <hr />
                    <a>Måndag - fredag: 11:00 - 22:00</a>
                    <p>Lördag - Söndag: 11:00 - 21:00</p>

                </div>

            </div>
        </div>
    </footer>

</body>
</html>
