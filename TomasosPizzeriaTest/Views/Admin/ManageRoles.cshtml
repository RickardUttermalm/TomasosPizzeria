
@model TomasosPizzeriaTest.ViewModels.ManageRolesViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-0 col-md-2 col-lg-4"></div>
        <div class="col-sm-12 col-md-8 col-lg-4 text-center">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <form asp-controller="Admin" asp-action="ManageRoles" method="post">
                        <label>Standard användare: </label>
                        <br />
                        <span asp-validation-for="SelectedUserID"></span>
                        <br />
                        <Select asp-for="SelectedUserID" asp-items="@Model.RegularUsers"></Select>
                        <br />
                        <br />
                        <button type="submit" class="btn btn-primary">Uppgradera vald</button>
                    </form>
                </div>
                <div class="col-sm-12 col-md-6">
                    <partial name="_DowngradeUserPartial" model="@Model" />
                </div>
            </div>
        </div>
        <div class="col-sm-0 col-md-2 col-lg-4"></div>
    </div>
</div>

