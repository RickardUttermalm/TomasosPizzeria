
@model TomasosPizzeriaTest.ViewModels.ManageOrdersViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-0 col-md-2 col-lg-4"></div>
        <div class="col-sm-12 col-md-8 col-lg-4 text-center">
            <div class="row">
                <div class="col-sm-12 col-md-6 text-center">
                    <label>Aktiva ordrar:</label>
                    <table class="table table-hover table-sm table-striped" id="ActiveOrdersTbl">
                        <tr>
                            <th>OrderID</th>
                            <th>Beställare</th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model.ActiveOrders)
                        {
                            <tr>
                                <td>@item.BestallningId</td>
                                <td>@item.Kund.AnvandarNamn</td>
                                <td><a asp-controller="Admin" asp-action="ConfirmOrder" asp-route-id="@item.BestallningId">Bekräfta</a></td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="col-sm-12 col-md-6 text-center">
                    <label>Levererade Ordrar:</label>
                    <table class="table table-hover table-sm table-striped" id="ConfirmedOrdersTbl">
                        <tr>
                            <th>OrderID</th>
                            <th>Beställare</th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model.FinishedOrders)
                        {
                            <tr>
                                <td>@item.BestallningId</td>
                                <td>@item.Kund.AnvandarNamn</td>
                                <td><a asp-controller="Admin" asp-action="DeleteOrder" asp-route-id="@item.BestallningId">Ta bort</a></td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-0 col-md-2 col-lg-4"></div>
    </div>
</div>

